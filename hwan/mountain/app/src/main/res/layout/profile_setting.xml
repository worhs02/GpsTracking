<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Back button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_back_arrow"
        android:background="@null"
        android:scaleType="fitCenter"
        android:contentDescription="Back" />

    <!-- Profile section -->
    <LinearLayout
        android:id="@+id/profileField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp">

        <ImageButton
            android:id="@+id/profile_imageChange"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/ic_user" />

        <TextView
            android:id="@+id/profilechangeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 수정"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Name field -->
    <LinearLayout
        android:id="@+id/name_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/nameTextField"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="17sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/set_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="이름을 알려주세요!"
            android:textSize="17sp"
            android:padding="8dp" />
    </LinearLayout>

    <!-- Nickname change field -->
    <LinearLayout
        android:id="@+id/nicknameChange_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/nicknameField"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="17sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/set_nickname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="닉네임을 입력하세요"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tag_text_Field"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="#xxxx"
            android:textSize="17sp"
            android:padding="8dp"
            />
    </LinearLayout>

    <!-- Introduce field -->
    <LinearLayout
        android:id="@+id/introduce_Field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/introduceTextField"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="소개"
            android:textSize="17sp"
            android:padding="8dp" />

        <EditText
            android:id="@+id/set_introduce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="자신을 소개 해보세요!"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:padding="8dp"/>
    </LinearLayout>

    <!-- Submit button -->
    <Button
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textColor="@color/black"
        android:backgroundTint="@color/holo_light_green"
        android:layout_marginTop="16dp" />

</LinearLayout>
